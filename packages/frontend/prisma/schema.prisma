// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  email     String     @unique
  username  String     @unique
  password  String
  context   FileType[] @relation("Context")
  createdAt DateTime   @default(now())
  updateAt  DateTime
}

model FileType {
  id        String   @id @default(uuid())
  user_id   String
  filename  String
  mimetype  String   @default("text/plain") // Ensure .txt files are recognized
  path      String
  size      Int
  createdAt DateTime @default(now())
  updateAt  DateTime
  sender    User     @relation("Context", fields: [user_id], references: [id])
}
